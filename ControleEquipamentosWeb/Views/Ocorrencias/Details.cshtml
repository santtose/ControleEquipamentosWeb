@model ControleEquipamentosWeb.Models.Ocorrencia

@{
    ViewData["Title"] = "Detalhes";
}

<h1>Detalhes</h1>

<div>
    <h4>Ocorrência</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataOcorrencia)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataOcorrencia)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrdemDeServico)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrdemDeServico)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrevisaoRetorno)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrevisaoRetorno)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DataDevolucao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DataDevolucao)
        </dd>
        <dd>
            <table class="table table-striped" height="50%">
                <thead class="table-primary">
                    <tr>
                        <th>Descrição</th>
                        <th>Marca</th>
                        <th># Registro</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>@Model.Equipamento.Descricao</td>
                        <td>@Model.Equipamento.Marca</td>
                        <td>@Model.Equipamento.NumeroRegistro</td>
                    </tr>
                </tbody>
            </table>
        </dd>
    </dl>
</div>
<div>
    @if (!@Model.Devolvido)
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a> <span>|</span>
    }
    <a asp-action="Index" class="btn btn-default">Voltar à lista</a>
</div>
