@model ControleEquipamentosWeb.ViewModels.EmprestimoViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Emprestimo</h4>
<hr />
@using (Html.BeginForm("Create", "Emprestimos", FormMethod.Post)) 
{
<div class="row">
    <div class="col-md-4">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="DataEmprestimo" class="control-label"></label>
            <input asp-for="DataEmprestimo" class="form-control" />
            <span asp-validation-for="DataEmprestimo" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DataPrevistaDevolucao" class="control-label"></label>
            <input asp-for="DataPrevistaDevolucao" class="form-control" />
            <span asp-validation-for="DataPrevistaDevolucao" class="text-danger"></span>
        </div>
        <div id="Equipamento" class="form-group">
            <label>Usuario</label>
            <select asp-items="@ViewBag.Usuarios" class="form-control" name="drpUsuarios">
                <option> -- SELECIONE -- </option>
            </select>
        </div>

        <div class="form-group">
            <input type="submit" value="Salvar" class="btn btn-primary" />
        </div>
    </div>
    <div class="col-md-8">
        <div class="container">
            <table class="table table-striped" height="50%">
                <thead class="table-primary">
                    <tr>
                        <th>Escolher</th>
                        <th>
                            Descricao
                        </th>
                        <th>
                            Marca
                        </th>
                        <th>
                            Modelo
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @for (int i = 0; i < Model.EquipamentosEscolhidos.Count; i++)
                    {
                    <tr>
                        <td>
                            @Html.HiddenFor(modelItem => Model.EquipamentosEscolhidos[i].EquipamentoId)
                            @Html.CheckBoxFor(modelItem => Model.EquipamentosEscolhidos[i].Selecionado, new { @checked = "checked" })
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.EquipamentosEscolhidos[i].Descricao)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.EquipamentosEscolhidos[i].Marca)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => Model.EquipamentosEscolhidos[i].Modelo)
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
}

<div>
    <a asp-action="Index" class="btn btn-default">Voltar à lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
